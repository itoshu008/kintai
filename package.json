{
  "name": "attendance-app",
  "version": "1.0.0",
  "description": "50名規模の勤怠アプリ",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev:8001",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "cursor:dev": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 dev",
    "cursor:build": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 build",
    "cursor:start": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 start",
    "cursor:restart": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 restart",
    "cursor:stop": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 stop",
    "cursor:logs": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 logs",
    "cursor:status": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 status",
    "cursor:health": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 health",
    "cursor:clean": "powershell -ExecutionPolicy Bypass -File cursor-dev.ps1 clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "iconv-lite": "^0.7.0"
  }
}
