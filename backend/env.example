# データベース設定（ローカルMariaDB）
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=attendance

# サーバー設定
PORT=8000
NODE_ENV=development

# データディレクトリ設定
DATA_DIR=./data

# ログレベル設定 (debug, info, warn, error)
LOG_LEVEL=info

# CORS設定（カンマ区切りで複数指定可能）
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8001,http://127.0.0.1:8001

# タイムゾーン
TZ=Asia/Tokyo

# セッション設定
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000